{
  "name": "electron-nextjs-project",
  "version": "0.1.0",
  "private": true,
  "main": "main/main.js",
  "author": "manku",
  "description": "manku erp project",
  "scripts": {
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "build": {
    "appId": "com.example.app",
    "productName": "MANKU_ERP",
    "win": {
      "target": "nsis",
      "icon": "public/installer-icon.ico",
      "artifactName": "${productName}-${version}-setup.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "perMachine": false,
      "installerIcon": "public/installer-icon.ico",
      "uninstallerIcon": "public/installer-icon.ico",
      "uninstallDisplayName": "YourApp Uninstaller",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@ag-grid-community/theming": "^32.3.2",
    "@ant-design/icons": "^5.5.1",
    "ag-grid-community": "^32.3.2",
    "ag-grid-react": "^32.3.2",
    "antd": "^4.24.16",
    "axios": "^1.7.7",
    "dotenv": "^16.4.7",
    "electron-serve": "^2.1.1",
    "electron-updater": "^6.3.9",
    "flexlayout-react": "^0.8.3",
    "gapi-script": "^1.2.0",
    "html2canvas": "^1.4.1",
    "immutability-helper": "^3.1.1",
    "jspdf": "^2.5.2",
    "less": "^4.2.2",
    "less-loader": "^12.2.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "next": "^14.2.15",
    "next-plugin-antd-less": "^1.8.0",
    "next-transpile-modules": "^10.0.1",
    "nookies": "^2.5.2",
    "prop-types": "^15.8.1",
    "react": "^18",
    "react-contextmenu": "^2.14.0",
    "react-dom": "^18",
    "react-grid-layout": "0.6.1",
    "react-phone-input-2": "^2.15.1",
    "react-redux": "^9.1.2",
    "react-resizable-panels": "^2.1.7",
    "react-splitter-layout": "^4.0.0",
    "styled-components": "^6.1.13",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.2.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.0.1",
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "next-redux-wrapper": "^8.1.0",
    "typescript": "^5"
  },
  "type": "module"
}
